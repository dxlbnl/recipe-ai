		"cheerio": "1.0.0-rc.12",
		"dotenv": "^16.4.5",
		"drizzle-orm": "^0.30.2",
		"langchain": "^0.1.28",
		"openai": "^4.29.0",
		"postgres": "^3.4.3",
		"sveltekit-superforms": "^2.9.0",
		"zod": "^3.22.4",
		"zod-to-ts": "^1.2.0"
	}
}
